{
  "name": "hono-sanitizer",
  "version": "0.0.1-beta",
  "repository": {
    "type": "git",
    "url": "https://github.com/azizbecha/hono-sanitizer.git"
  },
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsdown src/index.ts --format cjs,esm --dts",
    "dev": "tsdown src/index.ts --format cjs,esm --dts --watch",
    "fmt": "oxfmt -c .config/.oxfmtrc.json",
    "lint": "oxlint -c .config/.oxlintrc.json --type-aware --type-check --deny-warnings",
    "test": "vitest --silent=passed-only",
    "test:run": "vitest run --silent=passed-only",
    "typecheck": "tsc --noEmit",
    "prepare": "husky",
    "prepublishOnly": "bun run build && bun run test:run",
    "lint-staged": "lint-staged",
    "commit": "cz"
  },
  "dependencies": {
    "dompurify": "^3.3.1",
    "isomorphic-dompurify": "^2.35.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@types/bun": "latest",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "hono": "^4.11.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.24.0",
    "oxlint": "^1.39.0",
    "oxlint-tsgolint": "^0.11.0",
    "tsdown": "^0.20.0-beta.1",
    "vitest": "^4.0.17"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "oxlint -c .config/.oxlintrc.json --fix",
      "oxfmt -c .config/.oxfmtrc.json --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
